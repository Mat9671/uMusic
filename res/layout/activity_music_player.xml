<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/lbl_music_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/song_title" />

            <TextView
                android:id="@+id/lbl_music_album"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/album" />

            <TextView
                android:id="@+id/lbl_artist_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/artist" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_open_playlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:padding="0dip"
            android:src="@drawable/music_library" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="@color/black" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/album_image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:contentDescription="@string/album" />

        <ImageView
            android:id="@+id/album_mask"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@color/lyrics_mask" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="fill_parent" >

            <TextView
                android:id="@+id/lbl_lyrics"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/lyrics"
                android:textColor="@color/white" />
        </ScrollView>

        <include
            android:id="@+id/loading_lyrics_progress_bar"
            layout="@layout/loading"
            android:visibility="invisible" />
    </FrameLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/lbl_current_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical" />

            <SeekBar
                android:id="@+id/skb_song_progress"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/lbl_total_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:orientation="horizontal" >

            <ToggleButton
                android:id="@+id/btn_shuffle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="Shuffle"
                android:textOn="Shuffled" />

            <ToggleButton
                android:id="@+id/btn_repeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="Repeat"
                android:textOn="Repeating" />

            <ToggleButton
                android:id="@+id/btn_autoload_lyrics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="Auto load lyrics"
                android:textOn="Auto loading lyrics" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_backward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/backward" />

            <Button
                android:id="@+id/btn_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/play" />

            <Button
                android:id="@+id/btn_pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pause" />

            <Button
                android:id="@+id/btn_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stop" />

            <Button
                android:id="@+id/btn_forward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/forward" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>