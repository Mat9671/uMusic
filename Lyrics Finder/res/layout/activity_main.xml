<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/artist_info_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/singer_text_view"
            style="@style/Labels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/artist_text_field"
            android:layout_alignBottom="@+id/artist_text_field"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@+id/artist_text_field"
            android:text="@string/song_artist" />

        <EditText
            android:id="@+id/artist_text_field"
            style="@style/LyricFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="14dp"
            android:ems="10"
            android:inputType="text"
            android:text="Demi Lovato" >

            <requestFocus />
        </EditText>

        <TextView
            style="@style/Labels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/music_text_field"
            android:layout_alignBottom="@+id/music_text_field"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/artist_text_field"
            android:layout_marginLeft="5dp"
            android:text="@string/song_title" />

        <EditText
            android:id="@+id/music_text_field"
            style="@style/LyricFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/artist_text_field"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="text"
            android:text="Give Your Heart A Break" />
    </RelativeLayout>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/lyric_container"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingTop="10dip" >

        <TextView
            android:id="@+id/lyrics_text_view"
            style="@style/Lyric"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:ems="10"
            android:focusable="false" />
    </ScrollView>

    <Button
        android:id="@+id/button_find_lyrics"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="findLyrics"
        android:text="@string/btn_find_lyric" />

</LinearLayout>