<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/singerTextView"
        style="@style/Labels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/singerTextField"
        android:layout_alignBottom="@+id/singerTextField"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/singerTextField"
        android:text="@string/text_singer_name" />

    <EditText
        android:id="@+id/singerTextField"
        style="@style/LyricFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="text"
        android:text="Demi Lovato" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/musicTextView"
        style="@style/Labels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/musicTextField"
        android:layout_alignBottom="@+id/musicTextField"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/singerTextView"
        android:layout_marginLeft="5dp"
        android:text="@string/text_music_name" />

    <EditText
        android:id="@+id/musicTextField"
        style="@style/LyricFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/singerTextField"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="text"
        android:text="Give Your Heart A Break" />

    <EditText
        android:id="@+id/lyricsTextField"
        style="@style/Lyric"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_find_lyrics"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/musicTextField"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textMultiLine"
        
        android:clickable="false" 
        android:cursorVisible="false" 
        android:focusable="false" 
        android:focusableInTouchMode="false" />

    <Button
        android:id="@+id/button_find_lyrics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:onClick="findLyrics"
        android:text="@string/btn_find_lyric" />

</RelativeLayout>